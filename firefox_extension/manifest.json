{
    "manifest_version": 2,
    "name": "MAL Tracker",
    "version": "1.0",

    "description": "Updates your MAL list automatically as you watch anime.",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_title": "ALTracker",
        "default_popup": "popup/ALT_popup.html"
    }
}
